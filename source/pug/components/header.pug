.header__wrapper
  div(class="another__wrapper")
    header(class="header")
      a(class="header__logo" href="index.html")
        include ../../img/svg/logo.svg
      nav(class="header__nav")
        ul(class="header__list nav-list")
          each item in paths
            li(class="nav-list__item")
              a(class=item.isActive ? 'active' : '' href=item.path)=item.text
